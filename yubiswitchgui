#!/bin/bash

set -e
set -o pipefail

US="$0"

PIDFILE=/var/run/user/$UID/yubiswitchgui.pid

function enable_yubikey {
	if $(is_enabled); then
		echo "warn: already enabled" >&2
	else
		yubiswitch.py on > /dev/null 2>&1
	fi
	show_enabled_icon
	# automatically disable after 30 secs
	nohup bash -c "sleep 30; yubiswitchgui disable" &
}

function disable_yubikey {
	if ! $(is_enabled); then
		echo "error: already disabled" >&2
	else
		yubiswitch.py off > /dev/null 2>&1
	fi
	show_disabled_icon
}

function show_enabled_icon {
	test -e $PIDFILE && kill $(cat $PIDFILE) || true
	yad --notification --image=input-touchpad --text="Yubikey Enabled" --command="$US disable" &
	echo $! > $PIDFILE
}

function show_disabled_icon {
	test -e $PIDFILE && kill $(cat $PIDFILE) || true
	yad --notification --image=touchpad-disabled --text="Yubikey Disabled" --command="$US enable" &
	echo $! > $PIDFILE
}

function is_enabled {
	test $(yubiswitch.py list | grep -Eo "active=(True|False)" | grep -Eo "(True|False)" | head -n1) == "True"
}

function has_yubikey {
	test -n "$(yubiswitch.py list)"
}

function status_yubikey {
	if $(is_enabled); then
		echo "enabled"
		show_enabled_icon
		echo "icon shown"
	else
		echo "disabled"
		show_disabled_icon
		echo "icon shown"
	fi
}


### MAIN ###

if ! has_yubikey; then
	echo "error: Yubikey not found" >&2
	exit 3
fi

case $1 in
	enable|on|start)
	enable_yubikey
	;;
	disable|off|stop)
	disable_yubikey
	;;
	status|'')
	status_yubikey
	;;
	*)
	echo "error: unknown command: '$1'" >&2
	exit 1
	;;
esac
